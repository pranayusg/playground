{
    "name": "one-request-remix",
    "version": "8.0.1-DEV",
    "description": "8.0.1-DEV Deployment",
    "private": true,
    "license": "",
    "sideEffects": false,
    "scripts": {
        "build": "npm run build:css && run-s build:*",
        "build:css": "postcss styles --base styles --dir app/styles",
        "build:remix": "remix build",
        "local": "dotenv -e ./environments/.env run-p development:*",
        "dev": "dotenv -e ./environments/.env.dev run-p development:*",
        "stage": "dotenv -e ./environments/.env.stage run-p development:*",
        "qa": "dotenv -e ./environments/.env.qa run-p development:*",
        "labs": "dotenv -e ./environments/.env.labs run-p development:*",
        "development": "cross-env NODE_ENV=development remix build",
        "development:css": "postcss styles --base styles --dir app/styles -w",
        "development:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
        "development:remix": "remix watch",
        "dev:prod": "dotenv -e ./environments/.env.dev cross-env NODE_ENV=production node ./server.js",
        "stage:prod": "dotenv -e ./environments/.env.stage cross-env NODE_ENV=production node ./server.js",
        "qa:prod": "dotenv -e ./environments/.env.qa cross-env NODE_ENV=production node ./server.js",
        "labs:prod": "dotenv -e ./environments/.env.labs cross-env NODE_ENV=production node ./server.js",
        "prod": "cross-env NODE_ENV=production node ./server.js",
        "start": "cross-env NODE_ENV=production node ./server.js"
    },
    "dependencies": {
        "@ant-design/icons": "^4.7.0",
        "@remix-run/express": "^1.6.0",
        "@remix-run/node": "^1.6.0",
        "@remix-run/react": "^1.6.0",
        "@sentry/node": "^7.6.0",
        "@sentry/tracing": "^7.6.0",
        "antd": "^4.20.2",
        "compression": "^1.7.4",
        "cross-domain-storage": "^2.0.7",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.0",
        "dotenv-cli": "^5.1.0",
        "express": "^4.17.1",
        "moment": "^2.29.3",
        "morgan": "^1.10.0",
        "postcss-cli": "^9.1.0",
        "postcss-import": "^14.1.0",
        "react": "^17.0.2",
        "react-auth-code-input": "^3.1.1",
        "react-code-input-2": "^3.10.6",
        "react-dom": "^17.0.2",
        "remix-utils": "^3.3.0",
        "tiny-invariant": "^1.2.0"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.6.0",
        "@remix-run/eslint-config": "^1.6.0",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "autoprefixer": "^10.4.7",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.13",
        "prettier": "^2.6.2",
        "prettier-plugin-tailwindcss": "^0.1.10",
        "tailwindcss": "^3.0.24",
        "typescript": "^4.5.5"
    },
    "engines": {
        "node": ">=14"
    }
}
